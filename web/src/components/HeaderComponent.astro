---
const { name, href } = Astro.props;
---
<div class="header-component">
  <a href={href} class="headerlink">{name}</a>
</div>
<style>
.header-component{
display:grid;
width:200px;
height:fit-content;
justify-content:center;
align-content:center;
text-align:center;
}
a{
width:100%;
text-decoration: none;
color: #919090;
cursor:pointer;
}
a:hover{
color:white;
opacity: 1;
transition: color 1s;
transition: opacity 1s;
}

</style>
<script>

import { animate, hover } from "motion";
    hover(".headerlink", (element) => {
        animate(element, { scale: 1.3 })
        return () => animate(element, { scale: 1 })

});
</script>
